<% content_for :title, @document.title %>

<!-- Document Header -->
<div class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-8">
      <!-- Breadcrumb -->
      <nav class="flex mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <div>
              <%= link_to root_path, class: "text-gray-400 hover:text-gray-500" do %>
                <svg class="flex-shrink-0 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                </svg>
                <span class="sr-only">Home</span>
              <% end %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <%= link_to "Documents", documents_path, class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
              <span class="ml-4 text-sm font-medium text-gray-500 truncate"><%= @document.title %></span>
            </div>
          </li>
        </ol>
      </nav>

      <!-- Document Info -->
      <div class="lg:flex lg:items-center lg:justify-between">
        <div class="flex-1 min-w-0">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <%= document_type_badge(@document) %>
            </div>
            <div class="ml-4">
              <div class="flex items-center">
                <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                  <%= @document.title %>
                </h1>
              </div>
              <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
                <div class="mt-2 flex items-center text-sm text-gray-500">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                  <%= link_to @company.name, company_path(@company), class: "hover:text-gray-700 underline" %>
                </div>
                <div class="mt-2 flex items-center text-sm text-gray-500">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Archived <%= time_ago_with_tooltip(@document.archived_at) %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-5 flex lg:mt-0 lg:ml-4 space-x-3">
          <%= link_to @document.url, target: "_blank", rel: "noopener", class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            View Original
          <% end %>
          <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" onclick="alert('Download feature coming soon!')">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Download
          </button>
        </div>
      </div>

      <!-- URL -->
      <div class="mt-6">
        <div class="flex items-center text-sm text-gray-500">
          <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
          <span class="break-all"><%= @document.url %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <!-- Document Content -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Document Content</h3>
          <div class="prose prose-sm max-w-none text-gray-700 bg-gray-50 rounded-lg p-4 max-h-96 overflow-y-auto">
            <%= simple_format(@document.content) %>
          </div>
        </div>
      </div>

      <!-- Archive History -->
      <% if @archives.any? %>
        <div class="bg-white shadow rounded-lg mt-8 version-history">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Version History</h3>
            <div class="flow-root">
              <ul role="list" class="-mb-8">
                <% @archives.each_with_index do |archive, index| %>
                  <li>
                    <div class="relative pb-8">
                      <% unless index == @archives.length - 1 %>
                        <span class="absolute top-5 left-5 -ml-px h-full w-0.5 bg-gray-200" aria-hidden="true"></span>
                      <% end %>
                      <div class="relative flex items-start space-x-3">
                        <div>
                          <div class="relative px-1">
                            <div class="h-8 w-8 bg-blue-500 rounded-full ring-8 ring-white flex items-center justify-center">
                              <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                              </svg>
                            </div>
                          </div>
                        </div>
                        <div class="min-w-0 flex-1">
                          <div>
                            <div class="text-sm">
                              <span class="font-medium text-gray-900">Version <%= archive.version %></span>
                            </div>
                            <p class="mt-0.5 text-sm text-gray-500">
                              Archived <%= time_ago_with_tooltip(archive.created_at) %>
                            </p>
                          </div>
                          <div class="mt-2 text-sm text-gray-700">
                            <% if archive.has_changes? %>
                              <div class="bg-yellow-50 border-l-4 border-yellow-400 p-3">
                                <div class="flex">
                                  <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                                    </svg>
                                  </div>
                                  <div class="ml-3">
                                    <p class="text-sm text-yellow-700">Changes detected from previous version</p>
                                    <% if archive.diff_content.present? %>
                                      <div class="mt-2 text-sm text-gray-600 italic">
                                        <%= archive.diff_content %>
                                      </div>
                                    <% end %>
                                    <% if archive.checksum.present? %>
                                      <div class="mt-2 text-xs text-gray-500 font-mono">
                                        Checksum: <%= archive.checksum[0..11] %>...
                                      </div>
                                    <% end %>
                                    <% if archive.archived_by.present? %>
                                      <div class="mt-2 text-xs text-gray-500">
                                        Archived by: <%= archive.archived_by %>
                                      </div>
                                    <% end %>
                                  </div>
                                </div>
                              </div>
                            <% else %>
                              <div class="bg-green-50 border-l-4 border-green-400 p-3">
                                <div class="flex">
                                  <div class="flex-shrink-0">
                                    <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                  </div>
                                  <div class="ml-3">
                                    <p class="text-sm text-green-700">No changes from previous version</p>
                                  </div>
                                </div>
                              </div>
                            <% end %>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1">
      <!-- Cryptographic Verification -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Cryptographic Verification</h3>
          
          <!-- IPFS Hash -->
          <div class="mb-4">
            <dt class="text-sm font-medium text-gray-500">IPFS Hash</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono break-all bg-gray-50 p-2 rounded">
              IPFS Hash: <%= @document.ipfs_hash %>
            </dd>
          </div>

          <!-- Gateway Link -->
          <div class="mb-4">
            <dt class="text-sm font-medium text-gray-500">IPFS Gateway</dt>
            <dd class="mt-1">
              <%= link_to IpfsService.instance.generate_gateway_url(@document.ipfs_hash, @document.title), IpfsService.instance.generate_gateway_url(@document.ipfs_hash, @document.title), target: "_blank", rel: "noopener", class: "text-sm text-blue-600 hover:text-blue-800 underline break-all" %>
            </dd>
          </div>

          <!-- Content Checksum -->
          <div class="mb-4">
            <dt class="text-sm font-medium text-gray-500">Content Checksum</dt>
            <dd class="mt-1 text-sm text-gray-900 font-mono break-all bg-gray-50 p-2 rounded">
              <%= Digest::SHA256.hexdigest(@document.content) %>
            </dd>
          </div>

          <!-- Verification Status -->
          <div class="mt-4 p-3 bg-green-50 rounded-md">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div class="ml-3">
                <h4 class="text-sm font-medium text-green-800">Cryptographically Verified</h4>
                <div class="mt-1 text-sm text-green-700">
                  Verification Status: Valid
                </div>
                <div class="mt-1 text-sm text-green-700">
                  IPFS Immutable - This document is immutably stored on IPFS with content-addressed storage.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Document Metadata -->
      <div class="bg-white shadow rounded-lg mt-6">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Document Details</h3>
          
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Company</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to @company.name, company_path(@company), class: "text-blue-600 hover:text-blue-800 underline" %>
              </dd>
            </div>
            
            <div>
              <dt class="text-sm font-medium text-gray-500">Domain</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= format_domain_link(@company.domain) %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Document Type</dt>
              <dd class="mt-1">
                <%= document_type_badge(@document) %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Archive Count</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= archive_count_text(@document) %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Content Size</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= number_to_human_size(@document.content.bytesize) %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Archived At</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @document.archived_at.strftime("%B %d, %Y at %I:%M %p %Z") %>
                <br>
                <span class="text-xs text-gray-600">Precise: <%= @document.archived_at.to_time.strftime("%H:%M:%S") %></span>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Actions -->
      <div class="bg-white shadow rounded-lg mt-6">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Actions</h3>
          
          <div class="space-y-3">
            <button type="button" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" onclick="alert('Verification feature coming soon!')">
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              Verify Integrity
            </button>

            <button type="button" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" onclick="alert('Export feature coming soon!')">
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 4H6a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-2m-4-1v8m0 0l3-3m-3 3L9 8m-5 5h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H19" />
              </svg>
              Export as PDF
            </button>

            <button type="button" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" onclick="alert('Share feature coming soon!')">
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z" />
              </svg>
              Share Document
            </button>

            <button type="button" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" onclick="alert('Legal report feature coming soon!')">
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
              </svg>
              Print Legal Report
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>