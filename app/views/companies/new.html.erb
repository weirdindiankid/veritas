<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="text-center">
      <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-purple-600 rounded-lg flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z" />
          <path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clip-rule="evenodd" />
        </svg>
      </div>
      <h2 class="text-3xl font-extrabold text-gray-900">Archive a Company</h2>
      <p class="mt-2 text-sm text-gray-600">
        Add a company to start archiving their terms of service and privacy policies
      </p>
    </div>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= form_with(model: @company, local: true, class: "space-y-6") do |form| %>
        <% if @company.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  Please fix the following <%= pluralize(@company.errors.count, "error") %>:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @company.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, 
                placeholder: "e.g., Twitter", 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @company.errors[:name].any?}",
                required: true %>
          <p class="mt-1 text-sm text-gray-500">The company or service name</p>
        </div>

        <div>
          <%= form.label :domain, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :domain, 
                placeholder: "twitter.com", 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @company.errors[:domain].any?}",
                required: true %>
          <p class="mt-1 text-sm text-gray-500">Primary domain without https://</p>
        </div>

        <div>
          <%= form.label :terms_url, "Terms of Service URL", class: "block text-sm font-medium text-gray-700" %>
          <%= form.url_field :terms_url, 
                placeholder: "https://twitter.com/tos", 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @company.errors[:terms_url].any?}",
                required: true %>
          <p class="mt-1 text-sm text-gray-500">Full URL to the terms of service page</p>
        </div>

        <div>
          <%= form.label :privacy_url, "Privacy Policy URL", class: "block text-sm font-medium text-gray-700" %>
          <%= form.url_field :privacy_url, 
                placeholder: "https://twitter.com/privacy", 
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @company.errors[:privacy_url].any?}" %>
          <p class="mt-1 text-sm text-gray-500">Full URL to the privacy policy (optional)</p>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, 
                placeholder: "Brief description of the company or service...",
                rows: 3,
                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm #{'border-red-300' if @company.errors[:description].any?}" %>
          <p class="mt-1 text-sm text-gray-500">Optional description to help identify the company</p>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <svg class="h-5 w-5 text-gray-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm text-gray-500">We'll automatically archive the documents</span>
          </div>
        </div>

        <div>
          <%= form.submit "Archive Company", 
                class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200" %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300" />
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Or</span>
          </div>
        </div>

        <div class="mt-6">
          <%= link_to "Browse existing companies", companies_path, 
                class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 transition duration-200" %>
        </div>
      </div>
    </div>
  </div>
</div>
